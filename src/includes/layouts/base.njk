<!DOCTYPE html>
<html lang="{% set lang = page.inputPath | getLang %}{{ lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | {{ global.website_title }}</title>
    <link rel="stylesheet" href="/css/main.css">
    <!-- Icon font-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script>
        // If sidebar is already collapsed, apply an initial collapsed state
        // to avoid flicker effect
        (function () {
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                document.documentElement.classList.add('sidebar-collapsed-init');
                document.documentElement.style.setProperty('--sidebar-active-transition-speed', '0s');
            }
        })();
    </script>
</head>
<body>
<!-- Mobile header - only shows on mobile -->
<div class="mobile-header">
    <div class="mobile-header-content" id="mobileHeaderContent">
        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle navigation menu">
            <i class="fas fa-bars"></i>
        </button>
        <span class="mobile-title" id="mobileTitle">{{ global.website_title }}</span>
    </div>
</div>

<div class="container">

    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>{{ global.website_title }}</h2>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li>
                    <a href="/{{ lang }}/" {% if page.url == "/"+lang+"/" %}class="active"{% endif %}>
                        <i class="fas fa-home"></i> <span>{{ i18n[lang].nav.home }}</span>
                    </a>
                </li>
                <li>
                    <a href="/{{ lang }}/about/" {% if page.url == "/"+lang+"/about/" %}class="active"{% endif %}>
                        <i class="fas fa-info-circle"></i> <span>{{ i18n[lang].nav.about }}</span>
                    </a>
                </li>
                <li>
                    <a href="/{{ lang }}/blog/" {% if page.url == "/"+lang+"/blog/" %}class="active"{% endif %}>
                        <i class="fas fa-pen"></i> <span>{{ i18n[lang].nav.blog }}</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="language-switcher">
            {% for langCode in ['en', 'sv', 'no'] %}
                {% set pagePath = page.url | replace("/" + lang + "/", "") %}
                <a href="/{{ langCode }}/{% if pagePath %}{{ pagePath }}{% endif %}"
                   {% if lang == langCode %}class="active"{% endif %}>
                    {{ langCode | upper }}
                </a>
            {% endfor %}
        </div>

        <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
            <i class="fas fa-chevron-left"></i>
        </button>
    </aside>

    <div class="content-wrapper" id="contentWrapper">
        <main>
            {{ content | safe }}
        </main>

        <footer>
            <p>&copy; {{ global.year }} {{ global.website_title }}</p>
        </footer>
    </div>
</div>

<script src="/js/main.js"></script>
</body>
</html>
