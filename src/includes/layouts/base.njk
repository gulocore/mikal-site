<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | {{ global.website_title }}</title>
    <link rel="stylesheet" href="/css/main.css">
    <!-- Icon font-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script>
        // If sidebar is already collapsed, apply an initial collapsed state
        // to avoid flicker effect
        (function() {
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                document.documentElement.classList.add('sidebar-collapsed-init');
            }
        })();
    </script>
</head>
<body>
<!-- Mobile header - only shows on mobile -->
<div class="mobile-header">
    <div class="mobile-header-content" id="mobileHeaderContent">
        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle navigation menu">
            <i class="fas fa-bars"></i>
        </button>
        <span class="mobile-title" id="mobileTitle">{{ global.website_title }}</span>
    </div>
</div>

<div class="container">

    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>{{ global.website_title }}</h2>
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li><a href="/" {% if page.url == "/" %}class="active"{% endif %}>
                        <i class="fas fa-home"></i> <span>Home</span>
                    </a></li>
                <li><a href="/about/" {% if page.url == "/about/" %}class="active"{% endif %}>
                        <i class="fas fa-info-circle"></i> <span>About</span>
                    </a></li>
                <li><a href="/blog/" {% if page.url == "/blog/" %}class="active"{% endif %}>
                        <i class="fas fa-pen"></i> <span>Blog</span>
                    </a></li>
            </ul>
        </nav>

        <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
            <i class="fas fa-chevron-left"></i>
        </button>
    </aside>

    <div class="content-wrapper">
        <main>
            {{ content | safe }}
        </main>

        <footer>
            <p>&copy; {{ global.year }} {{ global.website_title }}</p>
        </footer>
    </div>
</div>

<script src="/js/main.js"></script>
</body>
</html>
